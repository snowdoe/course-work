
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="sample.Controller" alignment="TOP_CENTER"
      xmlns:fx="http://javafx.com/fxml"  hgap = "10" vgap="10" styleClass="root">

    <Label text="X:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="xValue"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Y:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="yValue"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Outcome:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="outcome" editable="false"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button id="addButton"  text="X+Y"
            onMouseClicked="#onAddButton" fx:id="addButton"
            GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button id="substractButton"  text="X-Y"
            onMouseClicked="#onSubstractButton" fx:id="SubstractButton"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button id="divideButton"  text="X/Y"
            onMouseClicked="#onDivideButton" fx:id="divideButton"
            GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Button id="multiplyButton"  text="X*Y"
            onMouseClicked="#onMultiplyButton" fx:id="multiplyButton"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>

</GridPane>